{
    "name": "Webapp skeleton",
    "version": "1.0.0",
    "description": "Webapp skeleton",
    "main": "index.js",
    "scripts": {
        "start": "concurrently \"npm run start-server\" \"npm run wait-and-start-client\"",
        "start-server": "py -m uvicorn main:app --reload",
        "wait-and-start-client": "wait-on -H http://localhost:8000/health && npm run start-client",
        "start-client": "concurrently \"http-server -c-1\" \"cmd /c start http://localhost:8080\"",
        "postinstall": "pip install -r requirements.txt"
    },
    "dependencies": {
        "d3": "^7.8.5"
    },
    "devDependencies": {
        "concurrently": "^7.0.0",
        "http-server": "^14.1.1",
        "open": "^10.1.0",
        "wait-on": "^7.2.0"
    }
}
